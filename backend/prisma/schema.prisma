generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Categories {
  GOOGLE
}

enum IdentityType {
  MAIL
  PHONE
  AUTH
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String

  accounts Account[]

  identities Identity[]
}

model Account {
  id         String       @id @default(uuid())
  name       String // Cleaned via Regex (e.g., "NETFLIX", "CHASE")
  username   String? // The login handle used for this specific account
  notes      String? // Your "Moving Story" notes/user-added data
  categories Categories[]

  user   User   @relation(fields: [userid], references: [id])
  userid String

  connections Connections[]
}

model Connections {
  account    Account  @relation(fields: [accountId], references: [id])
  identity   Identity @relation(fields: [identityId], references: [id])
  accountId  String
  identityId String

  @@id([accountId, identityId])
}

model Identity {
  id    String       @id @default(uuid())
  value String // The actual information
  type  IdentityType // "Type of Information Stored"

  user        User          @relation(fields: [userid], references: [id])
  userid      String
  connections Connections[]
}
