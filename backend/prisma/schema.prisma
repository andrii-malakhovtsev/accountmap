generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int      @id
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  accounts Account[]
}

model Account {
  id       Int     @id @default(autoincrement())
  name     String // Cleaned via Regex (e.g., "NETFLIX", "CHASE")
  username String? // The login handle used for this specific account
  notes    String? // Your "Moving Story" notes/user-added data
  category String?

  user   User @relation(fields: [userid], references: [id])
  userid Int

  identities Identity[] // Relation to Identities
  createdAt  DateTime   @default(now())
}

model Identity {
  id    Int    @id @default(autoincrement())
  value String // The actual information
  type  String // "Type of Information Stored"

  account   Account @relation(fields: [accountid], references: [id])
  accountid Int
}
